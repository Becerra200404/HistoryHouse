generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Libro{
  id  Int @id @default(autoincrement())
  titulo String
  decripcion String
  fecha_publicacion DateTime
  numero_paginas Int
  sinopsis String
  objetivos String
  resumen String

  paisId Int
  pais Pais @relation(fields: [paisId], references: [id])

  autorId Int
  autor Autor @relation(fields: [autorId], references: [id])

  editorialId Int
  editorial Editorial @relation(fields: [editorialId], references: [id])

  categorias Categoria[]
}

model Autor{
  id Int @id @default(autoincrement())
  nombre String 
  libros Libro[]
}

model Editorial{
  id Int @id @default(autoincrement())
  nombre String 
  libros Libro[]
}

model Categoria{
  id Int @id @default(autoincrement())
  nombre String

  libros Libro[]
}

model Pais{
  id Int @id @default(autoincrement())
  nombre String

  libros Libro[]
}